section.subscribe
    .subscribe-wrap
        .container
            .row
                .col-lg-6.col-sm-8.col-10.offset-lg-3.offset-sm-2.offset-1.p-1
                    .text-uppercase.font-weight-bold.text-dark.h3.m-0.text-center
                        =keywords[language]['keep in touch we have sales!'] || 'keep in touch we have sales !'
                    .small.text-muted.py-3.text-capitalize.text-center
                        =keywords[language]['In publishing and graphic design, lorem ipsum is a placeholder text used to demonstrate the visual form of a document without relying on meaningful content ...'] || 'In publishing and graphic design, lorem ipsum is a placeholder text used to demonstrate the visual form of a document without relying on meaningful content ...'
                .col-lg-4.offset-lg-4.col-md-8.offset-md-2.col-10.offset-1.p-1
                    form(action="/action/subscribe", method="post")
                        .input-group
                            input.small.form-control.bg-white.p-4.text-muted(placeholder=keywords[language]['your email address'] || 'your email address')
                            button(type="submit").bg-transparent.btn.btn-transparent.text-dark.fa.fa-send
footer.bg-dark.py-md-5.py-sm-3.py-2.px-3.px-sm-0
  .container
    .row
      .col-lg-3.col-md-6.p-1
        .h-100.d-flex.flex-column.justify-content-between
          h4.mb-2.text-white.font-weight-bold.text-uppercase.m-0= keywords[language][constants.site.name] || constants.site.name
          small.mt-2.text-light.font-weight-light= keywords[language][constants.site.description] || constants.site.description
          ul.mb-0.mt-2.list-unstyled.d-flex.flex-row.align-items-center
            - for(var i = 0; i < constants.pages.length; i++)
              li.small.text-light.text-capitalize
                a.text-light.p-1(href=constants.pages[i].link)= keywords[language][constants.pages[i].title] || constants.pages[i].title
          small.mt-2.text-muted.text-uppercase!= '&copy; ' + constants.site.year + ' | ' + (keywords[language][constants.site.domain] || constants.site.domain)
      +footerBlockList(0)
      +footerBlockList(1)
      .col-lg-3.offset-lg-1.col-md-6.p-1
        .h-100.d-flex.flex-column.justify-content-between.align-items-lg-end
          .d-flex.py-2.flex-row.align-items-center.mb-2
            -for(var i = 0; i < constants.socials.length; i++)
              a(href=constants.socials[i].link, class="fa-" + constants.socials[i].icon).text-light.small.p-1.fa              
          div.d-flex.flex-row.align-items-center.align-items-md-start.flex-column
            .text-muted.small.text-capitalize.p-1= keywords[language]['join us today'] || 'join us today'
            .mt-2.d-flex.flex-row.align-items-center
              - for(var i = 0; i < constants.languages.length; i++)
                form.p-1(method="post", action="/action/language")
                  button(type="submit", value=constants.languages[i].slag, name='lang').btn.text-capitalize.small.px-0.btn-link.text-light= constants.languages[i].title
            .d-flex.flex-row.align-items-center
              img(src=constants.images.visa, width="45").p-1
              img(src=constants.images.master, width="45").p-1
